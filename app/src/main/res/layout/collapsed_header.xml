<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="380dp">

    <ImageView
        android:elevation="12dp"
        tools:background="@color/colorGood"
        android:id="@+id/detailedBackdrop"
        android:scaleType="centerCrop"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/detailedBackdrop">

        <ImageView
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:id="@+id/detailedPoster"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="116dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCardBackground"
                android:textSize="20sp"
                android:maxLines="3"
                android:textStyle="bold"
                tools:text="Kekicj" />

            <TextView
                android:id="@+id/detailedGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCardBackground"
                android:textSize="12sp"
                tools:text="genres" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>