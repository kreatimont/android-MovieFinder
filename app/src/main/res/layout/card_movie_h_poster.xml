<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    android:elevation="8dp"
    android:id="@+id/card_movie_h_poster"
    tools:targetApi="lollipop">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <ImageView
                android:scaleType="centerCrop"
                tools:src="@drawable/header_bg"
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:gravity="center_vertical"
            android:layout_weight="0.05"
            android:id="@+id/title"
            android:padding="8dp"
            android:textStyle="normal"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="Interstellar"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="0.005"
            android:gravity="center_vertical|start"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/filled_star"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/rating"
                android:layout_marginLeft="4dp"
                tools:text="9.5/10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:id="@+id/genres"
                android:layout_marginLeft="42dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Adventurs, Sci-fi"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_weight="0.1"
            android:id="@+id/overview"
            android:padding="8dp"
            tools:text="A team of explorers travel through a wormhole in space in an attempt to ensure humanity's survival. "
            android:layout_width="match_parent"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>